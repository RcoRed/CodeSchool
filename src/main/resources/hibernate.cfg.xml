<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/code_school</property>
        <property name="hibernate.connection.username">postgresMaster</property>
        <property name="hibernate.connection.password">goPostgresGo</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="show_sql">true</property>
       <!-- <property name="hbm2ddl.auto">create-drop</property> -->
        <mapping class="org.generation.italy.codeSchool.model.entities.Course"></mapping>
    </session-factory>
</hibernate-configuration>